model User {
  id                  Int       @id @default(autoincrement())
  name                String?
  email               String    @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  // role                  Role                    @default(MEMBER)
  // subDatabases UsersJoinSubDatabases[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model SubDatabase {
  id      Int    @id @default(autoincrement())
  name    String
  ownerId Int
  // members User[] @relation(fields: [userId], references: [id])
  // users UsersJoinSubDatabases[]
}

model UsersJoinSubDatabases {
  id            Int @id @default(autoincrement())
  // user          User        @relation(fields: [userId], references: [id])
  userId        Int
  // subdatabase   SubDatabase @relation(fields: [subdatabaseId], references: [id])
  subdatabaseId Int

  @@unique([userId, subdatabaseId])
}
